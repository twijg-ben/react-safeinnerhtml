{
  "name": "react-safeinnerhtml",
  "version": "0.2.0",
  "description": "React Component to safely use HTML in the DOM",
  "keywords": [
    "react",
    "react-component",
    "html",
    "react-dom",
    "dom",
    "javascript"
  ],
  "author": "Twijg IT B.V. <info@twijg-it.nl>",
  "contributors": [
    "Wiebe Cnossen <wiebe@twijg-it.nl>",
    "Jelle de Jong <jelle@twijg-it.nl>"
  ],
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --roots src",
    "lint": "eslint -c .eslintrc.yml src/**/*.js*",
    "prettier": "prettier --write src/**/*.js*",
    "build": "cross-env NODE_ENV=production babel src/ --ignore **/*.test.js --out-dir dist/",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint -c .eslintrc.yml",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "classnames": "^2.2",
    "htmlparser2": "^3.9.2",
    "lodash": "^4.0.0",
    "prop-types": "^15.5.8",
    "react": "^16",
    "react-dom": "^16"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8",
    "babel-jest": "^23.2.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "pre-commit": "^1",
    "prettier": "^1",
    "regenerator-runtime": "^0.12.0"
  },
  "homepage": "https://github.com/twijg/react-safeinnerhtml",
  "repository": {
    "url": "https://github.com/twijg/react-safeinnerhtml",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/twijg/react-safeinnerhtml/issues"
  }
}
